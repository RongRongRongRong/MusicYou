<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/music_icon" />

    <RelativeLayout
        android:id="@+id/LL1"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal" >


        <ImageButton
            android:id="@+id/notify_play_button"
            android:paddingTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingBottom="10dp"
            android:layout_centerInParent="true"
            android:src="@drawable/button_pause"
             android:background="@null"  />
        
        <ImageButton
            android:id="@+id/notify_pre_button"
             android:paddingRight="30dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_toLeftOf="@id/notify_play_button"
            android:src="@drawable/button_previous"
           
            android:background="@null" />

        <ImageButton
            android:id="@+id/notify_next_button"
            android:paddingLeft="30dp"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@id/notify_play_button"
            android:src="@drawable/button_next" 
             android:background="@null" />
    </RelativeLayout>

</LinearLayout>